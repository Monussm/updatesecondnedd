<div class="container">
    <div class="row mx-auto">
        <div class="container">
            <div class="row mt-4">
                <div class="col-md-6">
                    <div class="row ">
                        <h4>Sign up</h4>
                    </div>
                    <form action="/register" method="POST">
                    <div class="row border-bottom mx-auto">
                        <input class="mt-3 border-0" type="text" name="name" id="yourname" placeholder="Your Name"/>
                    </div>
                    <div class="row border-bottom mx-auto">
                        <input class="mt-3 border-0" type="text" name="email" id="youremail" placeholder="Your Email"/>
                    </div>
                    <div class="row border-bottom mx-auto">
                        <input class="mt-3 border-0" type="text" name="mobile" id="mobilenumber" placeholder="Mobile Number"/>
                    </div>
                    <div class="row border-bottom mx-auto">
                        <input class="mt-3 border-0" type="text" name="proffession" id="profession" placeholder="Your Profession"/>
                    </div>
                    <div class="row border-bottom mx-auto">
                        <input class="mt-3 border-0" type="text" name="password" id="password" placeholder="Password"/>
                    </div>
                    <div class="row border-bottom mx-auto">
                        <input class="mt-3 border-0" type="text" name="confirmpassowrd" id="confirmpassowrd" placeholder="Confirm your password"/>
                    </div>
                    <div class="row mx-auto">
                        <button class="mt-3 mb-3 bg-primary text-light fw-bold border-primary rounded" type="submit">Register</button>
                    </div>
                    </form>
                </div>
                <div class="col-md-6">
                    <div class="row">
                        <img class="rounded" src="../Image/anthony.jpg" alt="anthony.jpg"/>
                    </div>
                    <div class="row">
                        <a class="text-center text-decoration-none text-dark" href="/login">I am already register</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>